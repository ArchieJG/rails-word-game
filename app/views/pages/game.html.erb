<div class="container text-center">
  <div class="row">
    <h1>
      Let's play Countdown!
    </h1>
  </div>

  <div class="row">
    <h2>
      Your Grid:
    </h2>
  </div>

  <div class="row">
    <p>
      <%= @grid.join(" ") %>
    </p>
  </div>
</div>

<div class="container text-center">
  <div class="row">
      <form action="/pages/score" method="get">
        <input type="text" name="attempt">
        <input type="hidden" name="start_time" value="<%= @start_time %>">
        <input type="hidden" name="grid" value="<%= @grid.join("") %>">

        <div class="row">
          <input type="submit" value="Done!" class="btn btn-primary" >
        </div>
      </form>
  </div>


</div>

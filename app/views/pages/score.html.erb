<div class="container text-center">
  <div class="row">
    <h1>
      DONE
    </h1>
  </div>

  <div class="row">
    <p>
      Your word: <%= @your_word %>
    </p>
  </div>

  <div class="row">
    <p>
      The Grid: <%= @grid %>
    </p>
  </div>

  <div class="row">
    <p>
      Time Taken: <%= @time_taken.round %> seconds
    </p>
  </div>

  <div class="row">
    <p>
      Translation: <%= @translation %>
    </p>
  </div>

  <div class="row">
    <p>
      Score: <%= @score %>
    </p>
  </div>

  <div class="row">
    <p>
      <%= @message %>
    </p>
  </div>

  <div class="row">
    <%= link_to "New Game", "/pages/game", class: "btn btn-danger" %>
  </div>
</div>

